<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>aig-web</display-name>
	<!-- 
		De Spring configuratie files. Deze knopen we hier in de web.xml aan elkaar zodat 
		de afzonderlijke projecten niet van elkaar weten. Dit is handig voor testing zodat 
		andere configuratie files kunnen worden gebruikt. 
	-->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:/datainteractie-beans.xml classpath:/service-beans.xml classpath:/spring-config.xml</param-value>
	</context-param>
	<filter>
		<description>
		</description>
		<display-name>OpdrachtFilter</display-name>
		<filter-name>OpdrachtFilter</filter-name>
		<filter-class>nl.belastingdienst.aig.pit.OpdrachtFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>OpdrachtFilter</filter-name>
		<url-pattern>/pit/*</url-pattern>
	</filter-mapping>
	
	<!-- ContextLoaderListener zal op zoek gaan naar WEB-INF/applicationContext.xml -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<!-- DispatchServlet genaamd dispatcher, zal op zoek gaan naar WEB-INF/dispatcher-servlet.xml -->
	<servlet>
		<servlet-name>dispatcher</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>dispatcher</servlet-name>
		<url-pattern>*.html</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>	
	<jsp-config>
		<taglib>
			<taglib-uri>http://www.springframework.org/tags</taglib-uri>
			<taglib-location>/WEB-INF/tld/spring.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>http://www.springframework.org/tags/form</taglib-uri>
			<taglib-location>/WEB-INF/tld/spring-form.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>http://struts.apache.org/tags-tiles</taglib-uri>
			<taglib-location>/WEB-INF/tld/struts-tiles-1.3.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>http://www.belastingdienst.nl/webstraat</taglib-uri>
			<taglib-location>/WEB-INF/tld/webstraat.tld</taglib-location>
		</taglib>
	</jsp-config>
	
	
	<!-- moet van 500 t/m 504 per stuk, kan niet anders! -->
	<error-page>
		<error-code>500</error-code>
		<location>/WEB-INF/jsp/errors/error.jsp</location>
	</error-page>
	<error-page>
		<error-code>501</error-code>
		<location>/WEB-INF/jsp/errors/error.jsp</location>
	</error-page>	
	<error-page>
		<error-code>502</error-code>
		<location>/WEB-INF/jsp/errors/error.jsp</location>
	</error-page>	
	<error-page>
		<error-code>503</error-code>
		<location>/WEB-INF/jsp/errors/error.jsp</location>
	</error-page>	
	<error-page>
		<error-code>504</error-code>
		<location>/WEB-INF/jsp/errors/error.jsp</location>
	</error-page>


	<security-constraint>
		<display-name>AIG Behandelaar</display-name>
		<web-resource-collection>
			<web-resource-name>HTML</web-resource-name>
			<url-pattern>*.html</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		<auth-constraint>
			<description>Behandelaar</description>
			<role-name>AIG.BEHANDELAAR</role-name>
		</auth-constraint>
	</security-constraint>
	<security-role>
		<role-name>AIG.BEHANDELAAR</role-name>
	</security-role>	
		
	
	<resource-ref id="ResourceRef_1267105115070">
		<description>
		</description>
		<res-ref-name>jdbc/datasourceRef</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
		<res-sharing-scope>Shareable</res-sharing-scope>
	</resource-ref>
	<resource-ref id="ResourceRef_1308126308531">
		<description>
		</description>
		<res-ref-name>eis/factoryRef</res-ref-name>
		<res-type>javax.resource.cci.ConnectionFactory</res-type>
		<res-auth>Container</res-auth>
		<res-sharing-scope>Shareable</res-sharing-scope>
	</resource-ref>
	<resource-ref id="ResourceRef_1308126401875">
		<description>
		</description>
		<res-ref-name>jms/factoryRef</res-ref-name>
		<res-type>javax.jms.ConnectionFactory</res-type>
		<res-auth>Container</res-auth>
		<res-sharing-scope>Shareable</res-sharing-scope>
	</resource-ref>
	<resource-ref id="ResourceRef_1308126401906">
		<description>
		</description>
		<res-ref-name>jms/at0300/outputRef</res-ref-name>
		<res-type>javax.jms.Queue</res-type>
		<res-auth>Container</res-auth>
		<res-sharing-scope>Shareable</res-sharing-scope>
	</resource-ref>
	
</web-app>
